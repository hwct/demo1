<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
     	xmlns:app="http://schemas.android.com/apk/res-auto"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/ll_tabs_headerview"
	    android:background="@android:color/white"
	   
	    >
	<com.example.demo1.view.TabsViewPager
	    android:layout_width="fill_parent"
	    android:layout_height="130dp"
	    android:id="@+id/vp_tabs_slidingpager"
	    >
	</com.example.demo1.view.TabsViewPager>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_alignBottom="@id/vp_tabs_slidingpager"
	    android:background="#6000"
	    >
	    <TextView 
	        android:id="@+id/tv_guanggao_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="22sp"
	        android:text="广告标题"
	        android:textColor="@android:color/black"
	        />
	    <com.viewpagerindicator.CirclePageIndicator
	    android:layout_alignParentRight="true"
        android:id="@+id/indicator_circle"
        android:padding="4dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:radius="3dp"
        app:fillColor="#FFff0000"
        app:pageColor="@android:color/darker_gray"
        app:strokeWidth="0dp"
        />
	    
	    </RelativeLayout>
</RelativeLayout>