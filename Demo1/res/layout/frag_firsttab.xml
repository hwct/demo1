<?xml version="1.0" encoding="utf-8"?>
 <ScrollView 
     xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
        >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <include layout="@layout/header_guanggao"/>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/rl_fisrtpage_count"
	     android:background="#cccccc"
	    android:padding="8dp"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="18965656546"
	        android:layout_alignParentLeft="true"
	        android:textColor="@android:color/black"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="两个账户"
	        android:textColor="@android:color/black"
	        android:layout_alignParentRight="true"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="90dp"
	    android:layout_marginTop="5dp"
	    >
	    <View 
	        android:background="@android:color/black"
	        android:layout_width="2dp"
	        android:layout_height="fill_parent"
	        android:layout_centerInParent="true"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="25dp"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:id="@+id/tv_firsttab_yuyue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="25dp"
	            android:textSize="22sp"
	            android:textColor="@android:color/darker_gray"
	            android:text="柜面预约"
	            />
	        <TextView 
	            android:layout_marginTop="14dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="13sp"
	            android:textColor="@android:color/black"
	            android:text="需要到现场办理的业务"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="25dp"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:id="@+id/tv_firsttab_sepcialservice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="35dp"
	            android:textSize="22sp"
	            android:textColor="@android:color/darker_gray"
	            android:text="特殊服务"
	            />
	        <TextView 
	            android:layout_marginTop="14dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="13sp"
	            android:textColor="@android:color/black"
	            android:text="特殊人群关怀服务"
	            />
	    </LinearLayout>
	</RelativeLayout>
	
	<!-- 百度map -->
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="220dp"
	    android:id="@+id/view_mapview"
	    />
	
	    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	        >
	        
	        <TextView 
	            android:id="@+id/tv_first_licai"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="理财产品"
	            android:textSize="22sp"
	            android:textColor="@android:color/black"
	            android:layout_alignParentLeft="true"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/tv_first_licai"
	            android:layout_alignBottom="@id/tv_first_licai"
	            android:text="新上3个理财产品"
	            android:textColor="@android:color/black"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="更多"
	            android:textSize="18sp"
	            android:textColor="@android:color/black"
	            android:layout_alignParentRight="true"
	            />
	    </RelativeLayout>
	    <GridView
	        android:numColumns="2" 
	        android:id="@+id/gv_fisttab_licai"
	        android:layout_width="fill_parent"
	        android:layout_weight="100"
	        android:layout_height="fill_parent"
	        ></GridView>
	    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	        >
	        
	        <TextView 
	            android:id="@+id/tv_first_licai"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="金融资讯"
	            android:textSize="22sp"
	            android:textColor="@android:color/black"
	            android:layout_alignParentLeft="true"
	            />
	 
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="更多"
	            android:textSize="18sp"
	            android:textColor="@android:color/black"
	            android:layout_alignParentRight="true"
	            />
	    </RelativeLayout>
	   
</LinearLayout>
 </ScrollView>
